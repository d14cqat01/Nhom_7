<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99CCCC"
    >
    <ImageView
        android:id="@+id/image_signup"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rememberme"


        />
    <EditText
        android:id="@+id/mail_signup"
        android:layout_below="@+id/image_signup"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_action_mail"
        android:hint="Mail"
        android:textStyle="bold"
        android:textColorHint="#006699"
        android:textColor="#00688B"


        />
    <EditText
        android:id="@+id/pwd_signup"
        android:layout_below="@+id/mail_signup"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_action_passwd"
        android:hint="Password"
        android:textStyle="bold"
        android:textColorHint="#006699"
        android:textColor="#00688B"

        />
    <Button
        android:id="@+id/button_signup"
        android:layout_below="@+id/pwd_signup"
        android:layout_centerHorizontal="true"
        android:background="#528B8B"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Sign Up"
        android:textColor="#F5DEB3"
        android:textSize="17dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/button_cancel_signup"
        android:layout_below="@id/button_signup"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="#528B8B"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Cancel"
        android:textColor="#F5DEB3"
        android:textSize="17dp"
        android:textStyle="bold"

        />
</RelativeLayout>
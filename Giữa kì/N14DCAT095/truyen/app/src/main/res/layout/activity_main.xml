<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <EditText
        android:id="@+id/editText"
        android:hint="Dữ liệu được chọn"
        android:textColorHint="#993333"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btThem"
        android:text="Thêm"
        android:background="#EECBAD"
        android:layout_below="@id/editText"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btSua"
        android:text="Sửa"
        android:background="#EECBAD"
        android:layout_below="@id/editText"
        android:layout_toRightOf="@id/btThem"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btXoa"
        android:text="Xóa"
        android:background="#EECBAD"
        android:layout_below="@id/editText"
        android:layout_toRightOf="@id/btSua"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/listTruyen"
        android:layout_below="@id/btThem"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        >

    </ListView>
</RelativeLayout>
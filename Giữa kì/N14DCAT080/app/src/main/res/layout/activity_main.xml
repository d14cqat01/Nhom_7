<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="8"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Danh sách nhà hàng"
        android:textColor="#0a0909"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="35dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/android_restaurant"
            />

        <EditText
            android:id="@+id/id_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:hint="Nhập vào tên nhà hàng"
            android:textColorHighlight="@color/colorPrimary"
            android:textStyle="italic" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/android_address"
            />
        <EditText
            android:id="@+id/id_addr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:hint="Địa chỉ"
            android:textColorHighlight="@null"
            android:textStyle="italic"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/android_phone"
            />
        <EditText
            android:id="@+id/id_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:hint="Số điện thoại"
            android:textColorHighlight="@null"
            android:textStyle="italic"/>
        <Spinner
            android:id="@+id/id_spin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"></Spinner>


    </LinearLayout>
    <Button
        android:id="@+id/butt_save"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="#2047d2"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_weight="0.7"

        android:layout_gravity="center"

        android:text="Lưu"/>

    <ListView

        android:id="@+id/list_nhahang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

    </ListView>
</LinearLayout>

